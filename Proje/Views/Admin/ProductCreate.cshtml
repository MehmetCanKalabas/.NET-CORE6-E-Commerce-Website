@model Product

@{
    ViewData["Title"] = "ProductCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- BEGIN PAGE CONTENT-->
<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> ÜRÜN GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/ProductCreate" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-body">

                            <div class="form-group">
                                <label asp-for="ProductName" class="col-md-3 control-label">Ürün Adı</label>
                                <div class="col-md-9">
                                    <input asp-for="ProductName" class="form-control input-lg" placeholder="Ürün Adı" required />
                                </div>
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UnitPrice" class="col-md-3 control-label">Fiyat</label>
                                <div class="col-md-9">
                                    <input asp-for="UnitPrice" class="form-control input-lg" placeholder="Fiyat" required />
                                </div>
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>

                          <div class="form-group">
                            <label class="col-md-3 control-label">Kategori Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewData["categoryList"],
                                "Seçiniz" ,  new { @class = "form-control input-lg" })
                            </div>
                          </div>

                          <div class="form-group">
                            <label class="col-md-3 control-label">Marka Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("SupplierID", (IEnumerable<SelectListItem>)ViewData["supplierList"],
                                "Seçiniz" ,  new { @class = "form-control input-lg" })
                            </div>
                          </div>

                        <div class="form-group">
                            <label asp-for="Stock" class="col-md-3 control-label">Stok</label>
                            <div class="col-md-9">
                                <input asp-for="Stock" class="form-control input-lg" placeholder="Stok" required onkeypress="return numberonly(this, event);" />
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                                              

                        <div class="form-group">
                            <label asp-for="Discount" class="col-md-3 control-label">İndirim</label>
                            <div class="col-md-9">
                                <input asp-for="Discount" class="form-control input-lg" placeholder="İndirim"/>
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Statü Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("StatusID", (IEnumerable<SelectListItem>)ViewData["statusList"],
                                "Seçiniz" ,  new { @class = "form-control input-lg" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Keywords" class="col-md-3 control-label">Anahtar Kelimeler</label>
                            <div class="col-md-9">
                                <input asp-for="Keywords" class="form-control input-lg" placeholder="Anahtar Kelimeler"/>
                            </div>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Kdv" class="col-md-3 control-label">Kdv</label>
                            <div class="col-md-9">
                                <input asp-for="Kdv" class="form-control input-lg" placeholder="Kdv"/>
                            </div>
                            <span asp-validation-for="Kdv" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Releted" class="col-md-3 control-label">Buna Bakanlar</label>
                            <div class="col-md-9">
                                <input asp-for="Releted" class="form-control input-lg" placeholder="Buna Bakanlar"/>
                            </div>
                            <span asp-validation-for="Releted" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Notes" class="col-md-3 control-label">Notlar</label>
                            <div class="col-md-9">
                                <input asp-for="Notes" class="form-control input-lg" placeholder="Notlar"/>
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label">Resim Seçiniz</label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg"required />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>  

                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>


                    </div>
                    <div class="form-actions right1">
                        <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                        <input type="submit" name="name" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->