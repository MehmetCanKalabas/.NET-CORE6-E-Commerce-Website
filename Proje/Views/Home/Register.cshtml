
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- Loging area Start  -->
<div class="loging-areas">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3"></div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="login-users">
                    <form action="@Url.Action("Register","Home")" method="post" id="com-form-login">
                        <fieldset class="userdata content" style="border-color:black;">
                            <h2 class="proopc-process-title" style="font-weight:bold;">Üye Ol</h2>
                            <ul class="form-list">

                                <li>
                                    <label class="required"><em>*</em>Email:</label>
                                    <div class="input-box" id="com-form-login-username">
                                        <input type="text" placeholder="Email" name="Email" class="inputbox">
                                    </div>
                                </li>

                                <li>
                                    <label class="required"><em>*</em>Şifre:</label>
                                    <div class="input-box" id="com-form-login-password">
                                        <input type="password" placeholder="Şifre" name="Password" class="inputbox" id="modlgn-passwd">
                                    </div>
                                </li>

                            </ul>
                        </fieldset>
                        <div class="submit_crt">
                            <input type="submit" value="Gİrİş Yapınız" class="update_cart" name="Submit">

                            <a href="@Url.Action("Register","Home")" title="Üye Ol">
                                <input type="button" class="update_cart" value="Üye Ol" />
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Loging area area End  -->

