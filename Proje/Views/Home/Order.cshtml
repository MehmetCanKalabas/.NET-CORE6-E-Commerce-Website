@model User

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- wishlist area start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>İLETİŞİM BİLGİLERİNİZ</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Ad Soyad</th>
                                                <td><span class="amount">@Model.NameSurname</span></td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Email</th>
                                                <td><span class="amount">@Model.Email</span></td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Telefon</th>
                                                <td><span class="amount">@Model.Telephone</span></td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Fatura Adresi</th>
                                                <td><span class="amount">@Model.InvoıcesAddres</span></td>
                                            </tr>

                                        </tbody>
                                    </table>

                                    <div class="submit_crt">                   
                                        <a href="@Url.Action("Profile","Home")" title="Üye Ol">
                                            <input type="submit" class="update_cart" value="Güncelle" />
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


            <form action="@Url.Action("Order","Home")" method="post" id="com-form-login">
                    <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                    <div class="col-lg-6 col-md-6 col-sm-6 ">
                        <div class="cart_totals">
                            <h2>ÖDEME BİLGİLERİNİZİ GİRİNİZ</h2>
                            <div class="total_table">
                                <table class="table-responsive">
                                    <tbody>

                                        <tr class="cart-subtotal">
                                            <th>Kart Numarası</th>
                                            <td>
                                                <span class="amount">
                                                    <input type="text" name="kredikartno" class="inputbox" maxlength="16" required
                                                    onkeypress="return numberonly(this,event)">
                                                </span>
                                            </td>
                                        </tr>

                                        <tr class="cart-subtotal">
                                            <th>Ay</th>
                                            <td>
                                                <span class="amount">
                                                    <input type="text" name="kredikartay" class="inputbox" maxlength="2" required
                                                     onkeypress="return numberonly(this,event)">
                                                </span>
                                            </td>
                                        </tr>

                                            <tr class="cart-subtotal">
                                                <th>Yıl</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="kredikartyil" class="inputbox" maxlength="2" required
                                                         onkeypress="return numberonly(this,event)">
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Cvv</th>
                                                <td>
                                                    <span class="amount">
                                                         <input type="text" name="kredikartcvv" class="inputbox" maxlength="3" required
                                                         onkeypress="return numberonly(this,event)">
                                                    </span>
                                                </td>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>FATURA BİLGİLERİNİZİ GİRİNİZ</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Fatura Tipi</th>
                                                <td>
                                                   <span class="amount">
                                                       @Html.RadioButton("invoicetype","rbindividual", new {
                                                           value = "rbindividual",@checked = true}) Bireysel

                                                        @Html.RadioButton("invoicetype","rbcorporate", new {
                                                        value = "rbcorporate"}) Kurumsal
                                                   </span>
                                                </td>
                                            </tr>

                                            @*bireysel radiobutton seçilirse, burası gözükecek*@
                                            <tr class="cart-subtotal" id="tr_tckimlik">
                                                <th>TC KİMLİK NO</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="txt_individual" class="inputbox" maxlength="11" required
                                                             onkeypress="return numberonly(this,event)">
                                                    </span>
                                                </td>
                                            </tr>

                                            @*kurumsal radiobutton seçilirse, burası gözükecek*@
                                            <tr class="cart-subtotal" id="tr_vergino" style="display:none;">
                                                <th>VERGİ NO</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="txt_corporate" class="inputbox" maxlength="10"
                                                               onkeypress="return numberonly(this,event)" style="background-color:#FDF7C3;">
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>SATIŞ SÖZLEŞMESİ</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <td>
                                                    <span class="amount">
                                                        <strong>
                                                            Satılan ürün iadesi 2 gün içinde yapılabilir. Kırılan ürünlerden şirketimiz
                                                            sorumlu değildir. Kvk sözleşmesini okudum.
                                                        </strong>
                                                    </span>
                                                </td>
                                            </tr>    

                                        </tbody>
                                    </table>   
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <td>
                                                    <span class="amount">
                                                        <strong>
                                                            <label>
                                                                @Html.CheckBox("chk_accept",false)
                                                                Yukarıdaki bilgilendirmeleri okudum,kabul ediyorum.
                                                            </label>
                                                        </strong>
                                                    </span>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                    <div class="submit_crt" style="text-align:right;display:none;"id="div_siparisionayla">
                                        <a href="@Url.Action("Order","Home")" title="Siparişi Onayla">
                                            <input type="submit" class="update_cart" value="SİPARİŞİ ONAYLA"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </form>
            </div>
        </div>
    </div>
</div>
<!-- wishlist area end  -->
<script>
    $('input[type=radio][name=invoicetype]').on('change',function(){
        if($(this).val() =='rbindividual')
        {
            //alert("bireysel")
            $("#tr_tckimlik").css("display","block") // bireysel göster
            $("#tr_vergino").css("display", "none") // kurumsal gizle
            $("#txt_individual").attr("required","true") // bireysel zorunlu oldu
            $("#txt_corporate").removeAttr("required") // kurumsal zorunlu değil
        }
        else
        {
            //alert("kurumsal")
            $("#tr_tckimlik").css("display", "none") // bireysel gizle
            $("#tr_vergino").css("display", "block") // kurumsal göster
            $("#txt_corporate").attr("required", "true") // kurumsal zorunlu oldu
            $("#txt_individual").removeAttr("required") // bireysel zorunlu değil
        }
    })

    $('input[type=checkbox][name=chk_accept]').on('change',function(){
        if($(this).prop('checked'))
        {
            $("#div_siparisionayla").css("display", "block")
        }
        else
        {
            $("#div_siparisionayla").css("display","none")
        }
    })
</script>


